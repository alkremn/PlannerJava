<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" fillWidth="false" prefHeight="700.0" prefWidth="1200.0" styleClass="mainPage" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.com.planner.controller.LoginPageController">
  <children>
    <VBox alignment="TOP_CENTER" fillWidth="false" prefHeight="519.0" prefWidth="400.0" styleClass="loginBox">
      <children>
        <Label styleClass="mainLabel" text="Planner" textFill="#686868">
          <font>
            <Font name="Calibri" size="38.0" />
          </font>
        </Label>
        <Label styleClass="SignLabel" text="Sign in">
          <font>
            <Font size="16.0" />
          </font>
          <textFill>
            <Color blue="0.408" green="0.408" red="0.408" fx:id="x1" />
          </textFill>
        </Label>
        <TextField fx:id="username" alignment="TOP_CENTER" editable="true" maxHeight="-Infinity" maxWidth="-1.0" minHeight="-Infinity" prefHeight="40.0" prefWidth="280.0" promptText="Username" styleClass="textField" text="" />
        <PasswordField fx:id="password" alignment="CENTER" prefHeight="40.0" prefWidth="280.0" promptText="Password" styleClass="textField">
          <VBox.margin>
            <Insets top="20.0" />
          </VBox.margin>
        </PasswordField>
        <Button contentDisplay="TOP" maxHeight="-Infinity" minHeight="-Infinity" mnemonicParsing="false" onAction="#loginButtonHandler" prefHeight="40.0" prefWidth="180.0" styleClass="signButton" text="Login" textAlignment="CENTER" textFill="#ffa800" textOverrun="ELLIPSIS">
          <font>
            <Font name="Candara" size="12.0" />
          </font>
          <VBox.margin>
            <Insets top="40.0" />
          </VBox.margin>
        </Button>
        <Label fx:id="messageLabel" styleClass="messageLabel" text="No Such User" visible="false">
          <font>
            <Font name="Calibri" size="16.0" />
          </font>
          <VBox.margin>
            <Insets top="20.0" />
          </VBox.margin>
        </Label>
      </children>
    </VBox>
  </children>
  <stylesheets>
    <URL value="@../resources/css/style.css" />
  </stylesheets>
</VBox>
